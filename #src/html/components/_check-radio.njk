{% import "html/data/form/_checkData.njk" as data %}
{% from "html/includes/form/input/_checkbox.njk" import inputCheckbox %}
<!-- Checkbox square -->
<section class="d-grid gap-3">
	<h2 class="h1 mt-4">Checkbox-radiobutton</h2>
	<h3>Checkbox</h3>
	<div class="d-flex flex-wrap gap-2">
		{% for item in data.checkComponent %}
			{{ inputCheckbox(item) }}
		{% endfor %}
	</div>
	<!-- Checkbox square -->
	<!-- Checkbox label -->
	<h3 class="mt-4">Checkbox label</h3>
	{% for item in data.checkLabelComponent %}
		{{ inputCheckbox(item) }}
	{% endfor %}
	<!-- Radiobutton square -->
	<h3 class="mt-4">Radiobutton</h3>
	<div class="d-flex">
		{% for item in data.radioComponent %}
			{{ inputCheckbox(item) }}
		{% endfor %}
	</div>
	<!-- Radiobutton square -->
	<!-- Radiobutton label -->
	<h3 class="mt-4">Radiobutton label</h3>
	{% for item in data.radioLabelComponent %}
		{{ inputCheckbox(item) }}
	{% endfor %}
	<!-- Radiobutton label -->
	<h3>Switch</h3>
	<!-- Switch -->
	<div class="d-flex gap-3 flex-wrap">
		{% for item in data.switchComponent %}
			{{ inputCheckbox(item) }}
		{% endfor %}
	</div>
	<h3>Switc label</h3>
	<!-- Switch label -->
	{{ inputCheckbox(data.switchLabelComponent) }}
</section>