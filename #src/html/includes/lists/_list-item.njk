<div class="list-group qela-description">
	<div class="list-group-item">
		<div class="d-flex justify-content-between gap-3">
			<div class="d-flex align-items-center gap-2 lh-0">
				<span class="{{item.ic}} text-info-600"></span>
				<span>{{item.title}}</span>
			</div>
			<button type="button" class="btn btn-link text-info-600 btn-sm ic-right ic-chevron-right">Змінити</button>
		</div>
	</div>
	<div class="list-group-item pt-0 pb-2">
		<ul class='ps-0 mb-0'>
			{% for idx in item.itemContent %}
				<li class="d-flex gap-2 py-2">
					{% if idx.invalid %}
						<span class="display-7 flex-grow-1 text-danger-600">{{idx.invalid}}</span>
					{% else %}
						<span class="display-7 flex-grow-1">{{idx.label}}</span>
						<span class="display-7">{{idx.text}}</span>
					</li>
				{% endif %}
			{% endfor %}
		</ul>
	</div>
</div>

