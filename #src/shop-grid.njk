<!DOCTYPE html>
<html lang="ua">

	{% set title = "Shop grid" %}
	{% include "_head.njk" %}

	<body>
		{% set title = "游댠햑쮏-쮏쮏햦혡혰혱" %}
		{% include "html/components/_aside-layouts.njk" %}
		<main class="qela-fullscreen">
			<div class="qela-top bg-white">
				{% set type = 'btnLeft' %}
				{% include "html/includes/nav/_navbar.njk" %}
			</div>
			<!--content-->
			<div class="flex-grow-1">
				<div class="row g-2">
					{% set cardImgs = [
						{imgSrc:"shop-img.png",imgAlt:"행쮏쐄햟햤햣햫햫혪 1",status:true}, 
						{imgSrc:"shop-img-2.jpg",imgAlt:"행쮏쐄햟햤햣햫햫혪 2",status:true}, 
						{imgSrc:"shop-img-3.jpg",imgAlt:"행쮏쐄햟햤햣햫햫혪 3",status:false},
						{imgSrc:"shop-img-4.jpg",imgAlt:"행쮏쐄햟햤햣햫햫혪 4",status:true},
						{imgSrc:"shop-img-2.jpg",imgAlt:"행쮏쐄햟햤햣햫햫혪 5",status:true}, 
						{imgSrc:"shop-img-3.jpg",imgAlt:"행쮏쐄햟햤햣햫햫혪 6",status:true}
					]%}
					{% for img in cardImgs %}
						<div class="col-6">
							{% include "html/includes/cards/_card-shop.njk" %}
						</div>
					{% endfor %}
				</div>
			</div>
			<!--content-->
			<div class="qela-bottom bg-white">
				{% set shop = "active" %}
				{% set borderClass = "border-top"%}
				{% include "html/includes/tab/_tab-bar.njk" %}
			</div>

		</main>
		<!-- =========================== -->
		{% include "_js.njk" %}
	</body>

</html>